<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <IsPackable>true</IsPackable>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    
    <PropertyGroup>
        <PackageId>Shahab.Aspire.Hosting.Structurizr</PackageId>
        <Version>8.0.0-beta</Version>
        <PackageTags>aspire hosting Structurizr</PackageTags>
        <Description>Structurizr support for .NET Aspire.</Description>
        <PackageIconFullPath>Structurizr.558x447.png</PackageIconFullPath>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Authors>Shahab Ganji</Authors>
    </PropertyGroup>

    <PropertyGroup>
        <MinCodeCoverage>100</MinCodeCoverage>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Aspire.Hosting" Version="8.0.2" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="NuGet.Build.Tasks.Pack" Version="6.10.1" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="\"/>
        <None Include="../LICENSE" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
